

inspect=>@"creates unit tests for testing execution 
of if sentences"


event=>magix.test.if-equals

  inspect=>@"verifies that if returns true 
if values are equal"

  code
    _dt1=>tmp1
    _dt2=>tmp1
    if=>equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        _success
    else
      throw=>values didn't match


event=>magix.test.if-not-equals

  inspect=>@"verifies that if returns false 
if values are not equal"

  code
    _dt1=>tmp2
    _dt2=>tmp1
    if=>not-equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        _success
    else
      throw=>values didn't match


event=>magix.test.if-equals-lhs-null

  inspect=>@"verifies that if returns false 
if lhs is null"

  code
    _dt1
    _dt2=>tmp1
    if=>equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        throw=>values didn't match


event=>magix.test.if-equals-rhs-null

  inspect=>@"verifies that if returns false 
if lhs is null"

  code
    _dt1=>tmp1
    _dt2
    if=>equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        throw=>values didn't match


event=>magix.test.if-equals-rhs-null

  inspect=>@"verifies that if returns true 
if both sides are null"

  code
    _dt1
    _dt2
    if=>equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        _success
    else
      throw=>values didn't match


event=>magix.test.if-equals-rhs-null

  inspect=>@"verifies that if returns true 
if both sides are not existing"

  code
    if=>equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        _success
    else
      throw=>values didn't match


event=>magix.test.if-not-equals-lhs-not-existing

  inspect=>@"verifies that if returns true 
if both sides are not existing"

  code
    _dt2=>howdy
    if=>not-equals
      lhs=>[_dt1].Value
      rhs=>[_dt2].Value
      code
        _success
