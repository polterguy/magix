

inspect=>@"creates unit tests for testing execution 
of active events created with [event]"


event=>magix._test._run-event-with-parameters

  inspect=>@"internally used by [magix.test.run-event-with-parameters]
to see if passing parameters in and out from dynamically created hyper lisp events
behaves as expected"

  code
    if=>not-equals
      lhs=>[$][mumbo].Value
      rhs=>howdy
      code
        throw=>input parameter not accessible in [event]
    set=>[$][jumbo].Value
      value=>5


event=>magix.test.execute-event-with-parameters

  inspect=>@"verifies that executing a dynamically created [event] 
with parameters, both input and output is behaving
correctly"

  code
    magix._test._run-event-with-parameters
      mumbo=>howdy
    if=>not-equals
      lhs=>[magix._test._run-event-with-parameters][mumbo].Value
      rhs=>howdy
      code
        throw=>input value not returned
    if=>not-equals
      lhs=>[magix._test._run-event-with-parameters][jumbo].Value
      rhs=>5
      code
        throw=>output value not returned currectly

